{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": false,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "lib": ["ES2020", "DOM"],
    "noEmit": true
  },
  "include": [
    "src/ui/**/*.ts",
    "src/ui/**/*.tsx",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "public",
    "pickleglass_web",
    "functions",
    "dist"
  ]
}
